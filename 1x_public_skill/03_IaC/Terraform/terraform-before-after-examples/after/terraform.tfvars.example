# ==========================================
# Terraform Variables - Development Environment
# ==========================================

project_name = "myapp"
environment  = "dev"
region       = "ap-northeast-1"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["ap-northeast-1a", "ap-northeast-1c"]

public_subnet_cidrs = {
  "ap-northeast-1a" = "10.0.1.0/24"
  "ap-northeast-1c" = "10.0.2.0/24"
}

private_subnet_cidrs = {
  "ap-northeast-1a" = "10.0.11.0/24"
  "ap-northeast-1c" = "10.0.12.0/24"
}

# EC2 Configuration
instance_type  = "t3.small"
instance_count = 2

# RDS Configuration
db_instance_class   = "db.t3.small"
db_username         = "admin"
db_password         = "CHANGE_ME_SecurePassword123!"  # ⚠️ 必ず変更すること
create_read_replica = false

# Common Tags
common_tags = {
  CostCenter = "Engineering"
  Owner      = "DevOps Team"
}
